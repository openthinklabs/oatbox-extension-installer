    "tao",
    "oat",
    "oatbox",
    "composer",
    "computer-based-assessment"
  ],
  "authors": [
    {
      "name": "Open Assessment Technologies S.A.",
      "homepage": "http://www.taotesting.com"
    },
    {
      "name": "Lionel Lecaque",
      "role": "Developer"
    },
    {
      "name": "Ivan Klimchuk",
      "role": "Developer"
    }
  ],
  "homepage": "http://www.taotesting.com",
  "support": {
    "forum": "http://forum.taotesting.com",
    "issues": "http://forge.taotesting.com"
  },
  "type": "composer-plugin",
  "license": "GPL-2.0",
  "autoload": {
    "psr-0": {
      "oatbox\\composer": "./"
    }
  },
  "extra": {
